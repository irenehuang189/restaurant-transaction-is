<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_marginStart="8dp"
                android:textSize="@dimen/medium_text_size"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Nomor Meja" />

            <EditText
                android:id="@+id/nomor_meja"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <Button
                android:layout_marginStart="40dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Tambah"
                android:background="#FF9800"
                android:textSize="@dimen/button_text_size"
                android:layout_height="36dp"
                android:layout_marginEnd="14dp"
                android:onClick="onTambah"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_makanan"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Makanan"/>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Cordon Bleu"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus1"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_chicken_cordon_bleu"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add1"/>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Double"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus2"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_chicken_double"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add2"/>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Drumstick"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus3"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_chicken_drumstick"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add3"/>
        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Beef Steak"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus4"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_beef_steak"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add4"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_minuman"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Minuman"/>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Milkshake Strawberry"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus5"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_milkshake_strawberry"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add5"/>

        </LinearLayout>

        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Milkshake Coklat"
                android:layout_height="match_parent" />

            <Button
                android:text="-"
                android:layout_gravity="center"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="minus6"/>

            <EditText
                android:text="0"
                android:id="@+id/jumlah_milkshake_coklat"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:text="+"
                android:background="#FF9800"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:onClick="add6"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
