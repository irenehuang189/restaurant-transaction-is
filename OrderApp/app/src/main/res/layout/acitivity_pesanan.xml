<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_marginStart="8dp"
                android:textSize="@dimen/medium_text_size"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Nomor Meja" />

            <TextView
                android:id="@+id/pesanan_meja"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="36sp"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_makanan"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Makanan"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_cordon"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Cordon Bleu"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_cordon"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_double"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Double"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_double"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_drumstick"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Chicken Drumstick"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_drumstick"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_beef"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Beef Steak"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_beef"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_minuman"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="Minuman"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_strawberry"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Milkshake Strawberry"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_strawberry"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pesanan_coklat"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="Milkshake Coklat"
                android:layout_height="match_parent" />

            <TextView
                android:text="0"
                android:id="@+id/jumlah_pesanan_coklat"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
